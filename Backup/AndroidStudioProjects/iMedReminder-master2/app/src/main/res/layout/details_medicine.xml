<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/medicine_details_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="10dp">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">

            <ImageView android:id="@+id/med_photo"
                       android:layout_width="64dp"
                       android:layout_height="64dp"
                       android:layout_alignParentRight="true"
                       android:contentDescription=""/>

            <TextView android:id="@+id/med_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_toLeftOf="@id/med_photo"
                      android:textAppearance="@android:style/TextAppearance.Large"/>

        </RelativeLayout>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingBottom="5dp"
                  android:textStyle="bold"
                  android:text="@string/details"/>

        <TextView android:id="@+id/med_details"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="15dp"
                  android:paddingBottom="5dp"
                  android:textStyle="bold"
                  android:text="@string/current_stock"/>

        <TextView android:id="@+id/current_stock"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>
