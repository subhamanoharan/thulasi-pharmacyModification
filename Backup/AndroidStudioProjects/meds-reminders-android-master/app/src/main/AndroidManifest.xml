<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medsreminder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="19" />
    
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.medsreminder.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.medsreminder.ui.SplashScreen"
            android:label="@string/title_activity_splash_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.medsreminder.ui.ListViewActivity"
            android:label="@string/title_activity_list_view" >
        </activity>
        <activity 
            android:name="com.medsreminder.ui.MedDetailActivity"     
            android:label="@string/title_activity_med_detail" >
        </activity>

        <receiver
            android:name="com.example.medsreminder.MedNotificationReceiver"
            android:enabled="true" >
        </receiver>

        <activity
            android:name="com.medsreminder.ui.MedNotification"     
            android:label="@string/title_activity_med_notification" >
        </activity>
    </application>

</manifest>
