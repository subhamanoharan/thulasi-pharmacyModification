<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#CEF6EC"
    tools:context=".MyActivity"

    android:theme="@style/TextAppearance.AppCompat.Base.CompactMenu.Dialog">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:background="#FFEF70"
        android:layout_gravity="center"
        android:src="@drawable/ic_thulasi_logo" />

    <Button
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to find your nearest Thulasi Pharmacy"
        android:id="@+id/BtnFindNearest"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ImgBtnFb"
        android:src="@drawable/ic_fb_logo"
        android:layout_above="@+id/BtnFindNearest"
        android:onClick="onClick"/>


</RelativeLayout>
